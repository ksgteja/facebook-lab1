<div>
<br/>
<div class = "row">
    
    <div class = "container">
    <div class = "col-md-6">
    
    <div class="panel panel-default">
        
        <div class="panel-heading"><span style = "font-size : 20px; background-color: #3B5998; color : white"class="glyphicon glyphicon-pencil"></span>Update Status </div>
  <div class="panel-body">
    <div class="form-group">
  
  <textarea ng-model = "statusText" placeholder = "What's on your mind?" class="form-control" rows="5" id="comment" ></textarea>
</div>
  </div>
  <div class="panel-footer">
        <div>
      <button class = "btn btn-primary pull-right" ng-click = "postStatus()">Post</button>
            <div class="clearfix"></div>
        </div>
        </div>
</div>
    
    </div>
         <div class = "col-md-4">
        
            <div class="panel panel-default">
             <div class="panel-heading">Friends</div>
            <div class="panel-body">
                
                <div  style="overflow-y:auto;height:200px;">
  <ul class="list-group" >
  <li ng-repeat = "friend in friends" class="list-group-item"><span style = "width : 40px">{{friend.first_name}}</span>  
   </li>
     
                                                                                          
</ul>
         </div>           
            </div>
        </div>
        
        </div>
        </div>

</div>
    <div class = "container">
    <div class = "row">
        <div class ="col-md-5">
    <div class="well" ng-repeat = "feed in feeds track by $index">
    
        <div>
        <h4><span ng-if = "feed.friend" style = "font-size : 25px " accesskey=""class="glyphicon glyphicon-user"></span>
            <span ng-if = "feed.groups" class="glyphicon"><img style = "height: 25px; width : 25px" src = "../groups.png"/></span>
            <span ng-if = "feed.status" style = "font-size : 20px; background-color: #3B5998; color : white"class="glyphicon glyphicon-pencil"></span>
             <span ng-if = "feed.newJob" style = "font-size : 20px;  color : #3B5998"class="glyphicon glyphicon-briefcase"></span>
            <span ng-if = "feed.place" style = "font-size : 20px; color : #3B5998"class="glyphicon glyphicon-home"></span>
            {{feed.heading}}
            
            </h4>
        <p>{{feed.content}}</p>
        </div>
    
    </div>
            </div>
       
    </div>
        </div>
</div>